extends base

block content
  main.main.overview__overlay
    .card-container
      //- Loop through tours
      each tour in tours
        .card
          .card__header
            .card__picture
              //.card__picture-overlay &nbsp;
              img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
              h3.card__heading
                span= tour.name

          .card__body
            .card__details
              h4.card__sub-heading= `${tour.difficulty === 'medium' ? 'medium-hard' : tour.difficulty}, ${tour.duration}-day tour`
              p.card__text= tour.summary
              .card__data-wrapper
                .card__data
                  svg.card__icon
                    use(xlink:href='/img/icons.svg#icon-map-pin')
                  span= tour.startLocation.description
                .card__data
                  svg.card__icon
                    use(xlink:href='/img/icons.svg#icon-calendar')
                  span= tour.startDates[0].toLocaleString('en-us', { month: 'long', year: 'numeric' })
                .card__data
                  svg.card__icon
                    use(xlink:href='/img/icons.svg#icon-flag')
                  span= `${tour.locations.length} stops`
                .card__data
                  svg.card__icon
                    use(xlink:href='/img/icons.svg#icon-user')
                  span= tour.maxGroupSize

            .line.line__divider &nbsp;
            .card__footer
              p
                span.card__footer-value= `$${tour.price} `
                |
                span.card__footer-text per person
              p.card__ratings
                span.card__footer-text=  `Rating: `
                |
                span.card__footer-value= tour.ratingsAverage
              a.btn.card__button(href=`/tour/${tour.slug}`) Details